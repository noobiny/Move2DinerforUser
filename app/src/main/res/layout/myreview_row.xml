<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myreview_row_entire"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myreview_row_thumbnail"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop" />


        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/myreview_row_truckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myreview_row_thumbnail"
            android:gravity="left"
            android:text="불불불닭꼬치"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/myreview_row_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/trash_can"
                android:padding="5dp"
                android:text="  삭제"
                android:textColor="#810000"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/myreview_row_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myreview_row_truckName"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/myreview_row_thumbnail"
            android:text="리뷰내용"
            android:textColor="#000000"
            android:textSize="13dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/myreview_row_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:text="2017-10-23 11:09"
        android:textColor="#5E5E5E" />


    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#D0D0D0" />

</LinearLayout>