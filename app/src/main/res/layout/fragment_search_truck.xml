<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/autoview_listAll"
        style="@style/textViewOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:completionThreshold="0"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="#000"
        android:hint="검색어를 입력하세요." />


    <Button
        android:id="@+id/btnFindByMyBesides"
        style="@style/textViewOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_near_me"
        android:drawableTint="#000"
        android:text="    내 주변 찾기" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/btngroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnmap"
            style="@style/textViewOther_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1.5dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="지도로 찾기"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnlist"
            style="@style/textViewOther_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="리스트로 찾기"
            android:textColor="#000" />
    </LinearLayout>

    <Button
        android:id="@+id/btnFindByLocation"
        style="@style/textViewOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_map"
        android:drawableTint="#000"
        android:text="    푸드트럭 Zone" />

    <Button
        android:id="@+id/btnViewAllTruck"
        style="@style/textViewOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_directions_bus"
        android:drawableTint="#000"
        android:text="    전체 트럭 보기" />


</LinearLayout>